.setTwitchColors
  text-shadow: 0 0 1px #000, 0 0 2px #000 !important
  background: #18181b !important
  font-family: 'Roboto' !important
  font-size: 1.3rem !important
  line-height: 1.5em !important
  color: #FAFAFA !important
